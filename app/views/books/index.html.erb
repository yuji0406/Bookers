<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
<!--ここに一覧を表示-->
<% @books.each do |book| %>
<tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to'Show',book_path(book) %></td>
    <td><%= link_to'Edit',edit_book_path(book) %></td>
    <td><%= link_to'Destroy',book_path(book),method: :delete,data:{confirm:"削除しますか？"} %></td>
  </tr>
  <% end %>
</table>
<h2>New book</h2>



<%= form_with model:@book,local:true do |f| %>
<% if @book.errors.any? %>
<div class="alert">
  <h2 class="error" ><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <% @book.errors.full_messages.each do|message|%>
  <ul>
  <li><%= message %></li>
  </ul>
  <% end %>
</div>
<% end %> 
<div class="form">
<label>Title</label>
<%= f.text_field :title %>
</div>
<div class="form">
<label>Body</label>
<%= f.text_area :body %>
</div>
<div class="action">
<%= f.submit "Create Book" %>
</div>
<% end %>