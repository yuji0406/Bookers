<h1>Editing Book</h1>
<%= form_with model:@book,local:true do |f| %>
<% if @book.errors.any? %>
<div class="alert">
  <h2 class="error" ><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <% @book.errors.full_messages.each do|message|%>
  <ul>
  <li><%= message %></li>
  </ul>
  <% end %>
</div>
<% end %>
<div class="form">
<label>Title</label>
<%= f.text_field :title %>
</div>
<div class="form">
<label>Body</label>
<%= f.text_area :body %>
</div>
<div class="action">
<%= f.submit "Update Book" %>
</div>
<% end %>
<%= link_to"Show",book_path(@book) %>
